<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="Boundary.ViewDetails">

    <TextView android:text="@string/hello_world" android:layout_width="match_parent"
        android:id="@+id/tvVIEWDETAILSname"
        android:layout_height="0dp"
        android:textSize="@dimen/abc_text_size_large_material"
        android:gravity="center"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/ivVIEWDETAILSimage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
    <TextView
        android:id="@+id/tvVIEWDETAILSdetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>


</LinearLayout>
